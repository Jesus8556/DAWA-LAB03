    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const selectOption = document.getElementById("curso");
            const moduleSection = document.getElementById("moduleSection");
            const paymentSection = document.getElementById("paymentSection");
            const submitButton = document.getElementById("submitButton");

            selectOption.addEventListener("change", function () {
                if (selectOption.value !== "") {
                    moduleSection.style.display = "block";
                    paymentSection.style.display = "block";
                } else {
                    moduleSection.style.display = "none";
                    paymentSection.style.display = "none";
                }
            });

            document.getElementById("mainForm").addEventListener("input", function () {
                if (selectOption.value !== "" && (document.querySelectorAll("input[name='modules[]']:checked").length > 0) && (document.querySelector("input[name='payment']:checked"))) {
                    submitButton.removeAttribute("disabled");
                } else {
                    submitButton.setAttribute("disabled", "disabled");
                }
            });

            
        });

    </script>


